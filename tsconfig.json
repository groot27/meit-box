{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "types": ["vue3-toastify/global"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./components/*"],
      "@/api/*": ["./api/*"],
      "@/stores/*": ["./stores/*"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./utils/*"],
      "@/i18n/*": ["./i18n/*"],
      "@/pages/*": ["./pages/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
